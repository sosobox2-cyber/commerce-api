<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- appender :: console -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{35} - %X{dd.trace_id} %X{dd.span_id} - %msg%n</pattern>
        </encoder>
    </appender>

