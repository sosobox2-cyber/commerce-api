            <fileNamePattern>${catalina.base}/logs/open-api/info.%d{yyyy-MM-dd}.log</fileNamePattern>            
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{35} - %msg%n
            </pattern>
        </encoder>
    </appender>  

